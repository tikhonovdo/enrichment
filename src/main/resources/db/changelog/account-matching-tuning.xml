<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="additional_fields_to_account_matching" author="chitzkoy">
        <dropIndex tableName="account_matching" indexName="idx_account_matching_account_id_bank_account_code"/>

        <dropNotNullConstraint tableName="account_matching" columnName="bank_account_code"/>

        <addColumn tableName="account_matching">
            <column name="bank_currency_code" type="varchar(8)" remarks="Код валюты банка"/>
            <column name="pattern" type="varchar(128)" remarks="Подстрока описания операции в банке"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>