<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="matching_tables_init" author="chitzkoy">
        <createTable tableName="bank" remarks="Банк">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(128)" remarks="Название банка">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="bank">
            <column name="id">1</column>
            <column name="name">Тинькофф</column>
        </insert>

        <createTable tableName="currency_matching" remarks="Матчинг кодов валют Банк-FinancePM">
            <column name="currency_id" type="bigint" remarks="Идентификатор валюты FinancePM">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="varchar(8)" remarks="Код валюты банка">
                <constraints nullable="false"/>
            </column>
            <column name="bank_id" type="bigint" remarks="Идентификатор банка">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="currency_matching"
                                 baseColumnNames="currency_id"
                                 constraintName="fk_currency_matching_currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="currency_matching"
                                 baseColumnNames="bank_id"
                                 constraintName="fk_currency_matching_bank_id"
                                 referencedTableName="bank"
                                 referencedColumnNames="id"/>
        <createIndex tableName="currency_matching" indexName="idx_currency_matching_currency_id_currency_code">
            <column name="currency_id"/>
            <column name="currency_code"/>
        </createIndex>

        <createTable tableName="account_matching" remarks="Сопоставление счетов Банк-FinancePM">
            <column name="account_id" type="bigint" remarks="Идентификатор счета FinancePM">
                <constraints nullable="false"/>
            </column>
            <column name="account_code" type="varchar(32)" remarks="Код счета банка">
                <constraints nullable="false"/>
            </column>
            <column name="bank_id" type="bigint" remarks="Идентификатор банка">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="account_matching"
                                 baseColumnNames="account_id"
                                 constraintName="fk_account_matching_account_id"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="account_matching"
                                 baseColumnNames="bank_id"
                                 constraintName="fk_account_matching_bank_id"
                                 referencedTableName="bank"
                                 referencedColumnNames="id"/>
        <createIndex tableName="account_matching" indexName="idx_account_matching_account_id_account_code">
            <column name="account_id"/>
            <column name="account_code"/>
        </createIndex>

        <createTable tableName="category_matching" remarks="Сопоставление категорий Банк-FinancePM">
            <column name="category_id" type="bigint" remarks="Идентификатор категории FinancePM">
                <constraints nullable="false"/>
            </column>
            <column name="category_name" type="varchar(32)" remarks="Название категории у банка">
                <constraints nullable="false"/>
            </column>
            <column name="bank_id" type="bigint" remarks="Идентификатор банка">
                <constraints nullable="false"/>
            </column>
            <column name="mcc" type="varchar(4)" remarks="MCC-код категории"/>
            <column name="pattern" type="varchar(128)" remarks="Подстрока описания операции в банке"/>
            <column name="validated"  type="boolean" remarks="Статус проверенности данного сопоставления" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="category_matching"
                                 baseColumnNames="category_id"
                                 constraintName="fk_category_matching_category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="category_matching"
                                 baseColumnNames="bank_id"
                                 constraintName="fk_category_matching_bank_id"
                                 referencedTableName="bank"
                                 referencedColumnNames="id"/>
        <createIndex tableName="category_matching" indexName="idx_category_matching_category_id_category_name">
            <column name="category_id"/>
            <column name="category_name"/>
        </createIndex>

        <createTable tableName="draft_transaction" remarks="RAW транзакции банка">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="bank_id" type="bigint" remarks="Идентификатор банка">
                <constraints nullable="false"/>
            </column>
            <column name="date_from" type="timestamp" remarks="Минимальная дата в данных">
                <constraints nullable="false"/>
            </column>
            <column name="date_to" type="timestamp" remarks="Максимальная дата в данных">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="blob" remarks="Сырые данные от банка">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="draft_transaction"
                                 baseColumnNames="bank_id"
                                 constraintName="fk_draft_transaction_bank_id"
                                 referencedTableName="bank"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>