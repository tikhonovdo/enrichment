<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="additional_fileds_to_category_matching" author="chitzkoy">
        <addColumn tableName="category_matching">
            <column name="validated" type="boolean"
                    remarks="Признак проверенной и готовой к использованию записи о матчинге"
                    defaultValue="false"/>
        </addColumn>

        <addColumn tableName="category_matching">
            <column name="sum" type="numeric(16,6)" remarks="Сумма транзакции"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>